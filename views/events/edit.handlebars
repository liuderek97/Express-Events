<style>
    .con{
        margin-left: 60px;
        margin-right: 60px;
    }
    h1{
        margin-left: 1.5em;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>

<h1>EDIT</h1>
<form action="/events/edit/{{event._id}}?_method=PUT" method="POST" >
    <div class="con">
        <div class="form-group">
            <h4 for="exampleInputEmail1">Title</h4>
            <input  type="text" name="title" value="{{event.title}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title">
        </div>

        <div class="form-group">
            <h4 for="exampleInputPassword1">Event Date</h4>
            <input type="datetime-local" name="eventDate" value="{{event.eventDate}}" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
            <h4 for="exampleFormControlTextarea1">Description</h4>
            <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3">{{event.description}}</textarea>
        </div>

        
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </div>
</form>