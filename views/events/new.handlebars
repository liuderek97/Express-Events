<style>
    .con{
        margin: 50px;
    }
    h2{
        margin-left: 50px;
    }
</style>

<h2>Create a new group</h2>

<form action="/events/new" method="POST" >
    <div class="con">
        <div class="form-group">
            <h4 for="exampleInputEmail1">Title</h4>
            <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Title">
        </div>

        <div class="form-group">
            <h4 for="exampleInputPassword1">Event Date</h4>
            <input type="datetime-local" name="eventDate" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group">
            <h4 for="exampleFormControlTextarea1">Description</h4>
            <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </div>
</form>