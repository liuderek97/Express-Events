<style>
    .card{
        width:33%;
        margin: 15px;
        box-shadow: 10px 5px 5px rgba(211, 45, 62, 0.568);
    }

    .row{
        margin-right: 30px;
        margin-left: 30px;
        justify-content: center
    }
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .fo h1{
        text-align: center;
        font-family: Arial, Helvetica, sans-serif;
    }
    .ima{
        background-image: url("/public/images/photo1.jpeg");
        background-position: center;
        width:100%;
        height:470px;
    }
    .tex h1{
      padding-top: 190px;
      font-family: cursive;
      font-size: 60px;
      color:  rgb(253, 253, 253);
      text-align: center
    }
</style>
<div class="ima">
    <div class="tex">
        <h1>Use this page to find events that interest you</h1>
    </div>
</div>
<br>
<div class="fo">
    <h1>Events</h1>
</div>

<div class="row">
    {{#each events}}

    <div class="card">
        {{!-- {{#if this.image}} --}}
        <img src="../../upload/{{this.image}}" class="card-img-top" alt="...">
        {{!-- {{/if}} --}}
        <div class="card-body">
            <h3 class="card-title">{{this.title}}</h3>
            <h7>Event time: {{this.eventDate}}</h7>
            <p class="card-text"><p class="card-text">{{this.description}}</p></p>
            <p><a href="/events/show/{{this._id}}" class="btn btn-primary"`>Show event</a></p>
        </div>
    </div>
    {{/each}}
    </div>
    </div>
</div>
