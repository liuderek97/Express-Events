<h1> DashBoard</h1>
<p> Welcome {{user.name}} </p>
<a href="/logout"> LOG OUT</a>
{{#if Event}}
<table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each Event}}
        <tr>
          <td><a href="/events/show/{{id}}">{{title}}</a></td>
          <td>{{formatDate eventDate 'MMMM do YYYY'}}</td>
          <td><a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"> </i>Edit</a>
          <form id="delete-form" action="/events/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
              <button class="btn red" type="submit"><i class="fa fa-remove"></i>Delete</button>
          </form>
        </td>
        </tr>
      {{/each}}
    </tbody>

  </table>
{{/if}}